<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/pending"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Pending Orders"
        android:textAlignment="center"
        android:background="@color/pending"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="28dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />


    <TextView
        android:id="@+id/accepted"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        android:background="@color/accepted"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="28dp"
        android:textColor="@color/white"
        android:text="Accepted Order"
        app:layout_constraintEnd_toEndOf="@+id/pending"
        app:layout_constraintStart_toStartOf="@+id/pending"
        app:layout_constraintTop_toBottomOf="@+id/pending" />

    <TextView
        android:id="@+id/complete"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Completed Order"
        android:textAlignment="center"
        android:background="@color/delivered"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="28dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/picked"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/picked"
        app:layout_constraintTop_toBottomOf="@+id/picked" />

    <TextView
        android:id="@+id/picked"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        android:background="@color/picked"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="28dp"
        android:textColor="@color/white"
        android:text="On Delivery"
        app:layout_constraintEnd_toEndOf="@+id/accepted"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/accepted"
        app:layout_constraintTop_toBottomOf="@+id/accepted" />

    <TextView
        android:id="@+id/cancelled"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cancelled Orders"
        android:textAlignment="center"
        android:background="@color/cancelled"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="28dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/complete"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/complete"
        app:layout_constraintTop_toBottomOf="@+id/complete" />


</androidx.constraintlayout.widget.ConstraintLayout>